<div class="center jumbotron table table-responsive">
  <table class="table table-striped table-hover table-bordered">
    <thead>
    <tr class="info">
      <th>题号</th>
      <th>反馈人数</th>
      <th>正确率</th>
      <th>错误率</th>
      <th>未反馈人数</th>
      <th>操作</th>
    </tr>
    </thead>
    <tbody>
    <% @result.each do |answer_record| %>
        <tr>
          <% if answer_record[:status] %>
              <td>问题<%= answer_record[:answer_id] %></td>
              <td><%= answer_record[:status_true] %></td>
              <td><%= answer_record[:correct_robability].to_f*100 %>%</td>
              <td><%= answer_record[:failing_robability].to_f*100 %>%</td>
              <td><%= answer_record[:status_false] %></td>
              <td>
                <div class="btn btn-warning btn-sm"><%= link_to '查看',feedback_record_path(answer_record[:answer_id]), target: "_blank", rel: "nofollow" %></div>
              </td>
          <% else %>
              <td>问题<%= answer_record[:answer_id] %>：未开始</td>

          <% end %>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>

