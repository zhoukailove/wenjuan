<div style="width: 900px;height:400px;background-color: black ; padding-top:1%">
  <div class="row"   style="margin: 0px;">
<% @records.each_with_index do |item , index|  %>
        <div class="avatar col-md-2">
          <div class="avatar_desc thumbnail" >
            <img src="<%= item.score_user.avatar_file_name ? item.score_user.avatar.url(:thumb): '/images/126bg.jpg' %>" class="img-responsive" style="min-width: 170px;height: 210px;"  alt=""/>
            <div class="caption" style="padding:0px">
              <span class="text-center" style="display: block;font-size: 150%;">评委:<%= item.score_user ? item.score_user.name : index+1 %></span>
              <div style="border-bottom: 2px solid #e52233;"></div>
              <span class="text-center" style="display: block;font-size: 150%;"><%= item.number %></span>
            </div>
            <!--<div class="user_name">123123</div>-->
          </div>
        </div>
    <% end %>



  </div>
  <span class="fen text-center">总分数：<%= @records.pluck(:number).sum %></span>
</div>

<style>
    .avatar{
        height: 260px
    }
    .fen{
        line-height:110%;
        background-color: rebeccapurple;
        display: block ;
        color:white;
        font-size: 350%;
        margin-top: 2%;
        margin-left: 1%;
        margin-right: 1%;
    }

    .col-md-2{
        width: 23%;
        margin-left:1%;
        margin-right:1%;
        padding: 10px 10px 0px 10px;
        background-color: #006ad6;
        height: 75%;
    }
</style>
